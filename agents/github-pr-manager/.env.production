# GitHub / webhook
GITHUB_REPOSITORY=org/repo
GITHUB_TOKEN=your-gh-token
WEBHOOK_SECRET=replace-with-hmac-secret

# Services
REDIS_URL=redis://127.0.0.1:6379
DATABASE_URL=postgres://user:pass@db:5432/dbname

# Server
PORT=3001
NODE_ENV=production
DASHBOARD_ORIGIN=http://localhost:3001

# Metrics / queues
WEBHOOK_QUEUE_KEY=queue:github-webhook
METRICS_POLL_MS=5000

# AI Service Configuration
ENABLE_AI_ANALYSIS=true
AI_SERVICE_URL=http://localhost:8000
AI_MODEL=smollm2

# Logging Configuration
LOG_LEVEL=info
LOG_FORMAT=json

# Monitoring Configuration
PROMETHEUS_METRICS=true
METRICS_PREFIX=github_pr_manager

# Security Configuration
WEBHOOK_SIGNATURE_VALIDATION=true
RATE_LIMIT_ENABLED=true
RATE_LIMIT_MAX_REQUESTS=100
RATE_LIMIT_WINDOW_MS=900000

# Feature Flags
AUTO_MERGE_ENABLED=false
PR_COMMENT_ENABLED=true
ISSUE_TRIAGE_ENABLED=true
AI_REVIEW_ENABLED=true

# Legacy GitHub App Configuration (if using GitHub App instead of token)
# GITHUB_APP_ID=123456
# GITHUB_PRIVATE_KEY="-----BEGIN PRIVATE KEY-----\nYour private key here\n-----END PRIVATE KEY-----"
# GITHUB_INSTALLATION_ID=78901234
# GITHUB_WEBHOOK_SECRET=your_webhook_secret_here